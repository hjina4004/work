<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jina.minimon.MainActivity">

    <com.example.jina.minimon.TextIcomoon
        android:id="@+id/textAwesome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_emblem"
        android:textColor="#fb450d"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textAwesome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.jina.minimon.TextIcomoon
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-0.5sp"
            android:layout_marginTop="-0.5sp"
            android:background="#151b1f"
            android:text="@string/icon_logo_bg1"
            android:textColor="?android:attr/colorBackground"
            android:textSize="30sp" />

        <com.example.jina.minimon.TextIcomoon
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-0.5sp"
            android:layout_marginTop="-0.5sp"
            android:background="#ff8b4e"
            android:text="@string/icon_logo_bg2"
            android:textColor="?android:attr/colorBackground"
            android:textSize="30sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
